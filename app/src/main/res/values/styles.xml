<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ListItem" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/list_item_font_height</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <dimen name="list_item_font_height">16sp</dimen>

    <!-- Fixes font size bug. Source: https://stackoverflow.com/questions/29072345/toolbar-title-textsize-decreases-on-orientation-change -->
    <style name="ToolbarText" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <!--<item name="windowBackground">@null</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>
</resources>
