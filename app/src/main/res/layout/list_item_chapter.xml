<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_max_height">

    <nl.jeroenhd.app.bcbreader.views.FadingNetworkImageView
        android:id="@+id/thumb"
        android:layout_width="@dimen/list_item_image_size"
        android:layout_height="@dimen/list_item_image_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/content_description_chapter_thumb"
        android:src="@drawable/dummy_chapter_thumb"
        android:transitionName="thumb"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/list_item_right_to_text"
        android:layout_marginLeft="@dimen/list_item_text_offset_left"
        android:layout_marginRight="@dimen/list_item_right_to_text"
        android:layout_marginStart="@dimen/list_item_text_offset_left"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center_vertical"
        android:text="@string/dummy_chapter_title"
        android:textAppearance="@style/ListItem"
        android:transitionName="title" />

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/list_item_right_to_text"
        android:layout_marginLeft="@dimen/list_item_text_offset_left"
        android:layout_marginRight="@dimen/list_item_right_to_text"
        android:layout_marginStart="@dimen/list_item_text_offset_left"
        android:gravity="center_vertical"
        android:text="@string/dummy_chapter_description"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/favourite"
        android:layout_width="@dimen/list_item_right_image_size"
        android:layout_height="@dimen/list_item_right_image_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/list_item_right_image_vertical_margin"
        android:layout_marginEnd="@dimen/list_item_right_image_horizontal_margin"
        android:layout_marginRight="@dimen/list_item_right_image_horizontal_margin"
        android:layout_marginTop="@dimen/list_item_right_image_vertical_margin"
        android:src="@drawable/ic_favorite_white_48dp" />
</RelativeLayout>